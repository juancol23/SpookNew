<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="relato.app.dems.com.relato.beta.View.Util.VideoOnline">


    <VideoView

        android:id="@+id/videoOnline"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="70dp">

        <Button
            android:id="@+id/mBtnStart"
            android:layout_width="200dp"
            android:drawableBottom="@mipmap/ic_play"
            android:gravity="center"
            android:background="@color/black"
            android:textColor="@color/white"
            android:alpha=".5"
            android:layout_weight=".5"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/mBtnPaused"
            android:drawableBottom="@mipmap/ic_pause"
            android:background="@color/black"
            android:textColor="@color/white"
            android:alpha=".5"
            android:gravity="center"
            android:layout_weight=".5"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>




</RelativeLayout>
