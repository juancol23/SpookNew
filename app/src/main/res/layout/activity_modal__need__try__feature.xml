<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/black"
    tools:context="relato.app.dems.com.relato.beta.View.Util.AlertPopup.Modal_Need_Try_Feature">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:padding="24dp"
        android:orientation="vertical"
        android:background="@mipmap/fond">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿No puedes Acceder?"
            android:gravity="center"

            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/modal_need_try_feature_text_body"
            android:layout_width="match_parent"
            android:background="#1a2338"
            android:padding="5dp"

            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Para esta caracteristicas necesitas iniciar sesión o registrarse."
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/modal_need_try_feature_btn_inicia_sesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inciar Sesión"
                android:background="@drawable/modal_message_buttom_white_br"
                android:layout_weight=".5"
            android:visibility="gone"
                android:textColor="#3b3b3b"
                android:layout_marginRight="5dp"
                />

            <Button
                android:id="@+id/modal_need_try_feature_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/modal_message_buttom_white_br"
                android:textColor="#3b3b3b"
                android:text="Cerrar"
                android:layout_gravity="center"
                android:layout_weight=".5"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
